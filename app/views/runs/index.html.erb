<h1>Runs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Starting at</th>
      <th>Registrations booked</th>
      <th>Registration limit</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= run.starting_at %></td>
        <td><%= run.registrations_booked %></td>
        <td><%= run.registration_limit %></td>
        <td>
          <%= set_action_button(run,current_user.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
