<p id="notice"><%= notice %></p>

<h1>Runs</h1>

<table>
  <thead>
    <tr>
      <th>Starting at <%= logged_in? %></th>
      <th>Registration limit</th>
      <th>Registrations booked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= run.starting_at %></td>
        <td><%= run.registration_limit %></td>
        <td><%= run.registrations_booked %></td>
        <td><%= link_to 'Show', run %></td>
        <td><%= link_to 'Edit', edit_run_path(run) %></td>
        <td><%= link_to 'Destroy', run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Run', new_run_path %>
